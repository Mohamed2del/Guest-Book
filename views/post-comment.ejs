<%- include('partials/nav'); %>

<div class="card mb-3">
    <h3 class="card-header">Post</h3>
    <div class="card-body">
      <h5 class="card-title"><%= post.user.name %></h5>
      <h6 class="card-subtitle text-muted"><%= dateFormat(post.createdAt,'MMMM Do YYYY, h:mm:ss a') %></h6>
    </div>
    <div class="card-body">
      <p class="card-text"><%=post.post %></p>
      
      <h6>Comments : </h6>
    </div>

    <ul class="list-group list-group-flush">

      <% comments.forEach(comment => { %>
        
          <li class="list-group-item">
            <h5 class="card-title"><%= comment.user.name %> </h5> <p class="card-text"> <%= comment.comment %> </p> 
            <h6 class="card-subtitle text text-muted"><%= dateFormat(post.createdAt,'MMMM Do YYYY, h:mm:ss a') %></h6>
            
            <form action="/posts/<%= post._id %>" method="POST" >
            
              <input type="hidden" name="_method" value="delete" />
                <a type="submit" class="card-link">Delete</a>
    
            </form>
      </li>
        
     
    </ul>
    <% }) %>

  <form action="/posts/<%=post._id%>" method="POST">

      
    <div class="form-group">
      <label for="exampleTextarea">Comment</label>
      <div class="form-group">
        <input
        
          id="comment"
          name="comment"
          class="form-control"
          placeholder="Your Comment"
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Comment</button>

</form>
    
  </div>

