<%- include('partials/nav'); %>

<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= name %></p>
<a href="/home" class="btn btn-primary">Home</a>

<% posts.forEach(post => { %>

    <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= post.user.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%= dateFormat(post.createdAt,'MMMM Do YYYY, h:mm:ss a') %></h6>
          <p class="card-text"> <%= post.post %></p>
          <a href="/posts/<%=post._id %>" class="card-link">Comment</a>
          <a href="/posts/edit/<%=post._id %>" class="card-link">Edit</a>

          <form action="/posts/<%= post._id %>" method="POST" >
            
          <input type="hidden" name="_method" value="delete" />
            <a type="submit" class="card-link">Delete</a>

        </form>
        </div>
      </div>
      
<% }) %>


<a href="/posts/add" class="btn btn-primary">Post</a>
<a href="/users/logout" class="btn btn-secondary">Logout</a>